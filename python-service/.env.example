# python-service/.env

APP_NAME=prism-python-service
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

HOST=0.0.0.0
PORT=8000
WORKERS=4

DATABASE_URL=postgresql://prism_user:password@localhost:5432/prism_db

REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=10

UPLOAD_DIR=./data/uploads
TEMP_DIR=./data/temp
OUTPUT_DIR=./data/outputs

PDF_MAX_PAGES=500
PDF_DPI=150
PDF_IMAGE_QUALITY=85
VOYAGE_API_KEY=your_key_here
# âœ… CHANGED: EasyOCR config (no system path needed!)
OCR_LANGUAGES=en
OCR_GPU=false
OCR_BATCH_SIZE=20
OCR_TIMEOUT=30
OCR_WORKERS=4

EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_BATCH_SIZE=100
EMBEDDING_DEVICE=cpu
MODEL_CACHE_DIR=./data/models

EXPORT_TIMEOUT=60
EXPORT_MAX_PAGE_SIZE=50

WORKER_CONCURRENCY=4
WORKER_QUEUE=default
WORKER_RESULT_TTL=3600

CORS_ORIGINS=http://localhost:5173,http://localhost:5000

ENABLE_METRICS=true
METRICS_PORT=9090