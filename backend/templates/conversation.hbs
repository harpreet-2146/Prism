{{!-- Conversation Export Template --}}
<div class="page-header">
  <h1>{{title}}</h1>
  {{#if options.includeMetadata}}
  <div class="subtitle">
    Exported on {{formatDate generated.timestamp 'long'}} by {{metadata.exportedBy.fullName}}
  </div>
  {{/if}}
</div>

{{#if statistics}}
<div class="statistics">
  <h2 class="section-title">Export Summary</h2>
  <div class="stat-row">
    <span class="stat-label">Total Conversations:</span>
    <span class="stat-value">{{statistics.itemCount}}</span>
  </div>
  <div class="stat-row">
    <span class="stat-label">Total Messages:</span>
    <span class="stat-value">{{statistics.totalMessages}}</span>
  </div>
  <div class="stat-row">
    <span class="stat-label">Average Messages per Conversation:</span>
    <span class="stat-value">{{statistics.avgMessagesPerConversation}}</span>
  </div>
  <div class="stat-row">
    <span class="stat-label">Export Type:</span>
    <span class="stat-value">{{statistics.exportType}}</span>
  </div>
</div>
{{/if}}

{{#each processedItems}}
<div class="content-section">
  <div class="item-card">
    <div class="item-title">{{title}}</div>
    
    {{#if ../options.includeMetadata}}
    <div class="item-meta">
      <strong>Created:</strong> {{createdAtFormatted}} | 
      <strong>Messages:</strong> {{stats.totalMessages}} | 
      <strong>Duration:</strong> {{stats.userMessages}} user, {{stats.assistantMessages}} assistant
      {{#if summary}}
      <br><strong>Summary:</strong> {{summary}}
      {{/if}}
    </div>
    {{/if}}

    {{#if messages}}
    <div class="message-container">
      {{#each messages}}
      <div class="message {{role}}">
        <div class="message-role">{{roleDisplayName}}</div>
        <div class="message-content">{{markdown content}}</div>
        <div class="message-time">{{createdAtFormatted}}</div>
      </div>
      {{/each}}
    </div>
    {{/if}}

    {{#if ../options.includeMetadata}}
    {{#if stats}}
    <div class="metadata-section">
      <h4>Conversation Statistics</h4>
      <div class="metadata-row">
        <span class="metadata-label">Total Messages:</span>
        {{stats.totalMessages}}
      </div>
      <div class="metadata-row">
        <span class="metadata-label">Average Message Length:</span>
        {{stats.avgMessageLength}} characters
      </div>
      <div class="metadata-row">
        <span class="metadata-label">User Messages:</span>
        {{stats.userMessages}}
      </div>
      <div class="metadata-row">
        <span class="metadata-label">Assistant Messages:</span>
        {{stats.assistantMessages}}
      </div>
    </div>
    {{/if}}
    {{/if}}
  </div>
</div>

{{#unless @last}}
<div class="page-break"></div>
{{/unless}}
{{/each}}

<div class="footer-info">
  <p>Generated by PRISM Document Management System v{{generated.version}}</p>
  <p>Export completed on {{formatDate generated.timestamp 'datetime'}}</p>
  {{#if options.includeMetadata}}
  <p>Exported by: {{metadata.exportedBy.fullName}} ({{metadata.exportedBy.email}})</p>
  {{/if}}
</div>

<style>
{{{styles}}}

/* Conversation-specific styles */
.message-container {
  max-width: 100%;
  margin: 15px 0;
}

.message {
  margin: 10px 0;
  padding: 12px 15px;
  border-radius: 8px;
  position: relative;
  word-wrap: break-word;
}

.message.user {
  background: linear-gradient(135deg, #e3f2fd 0%, #bbdefb 100%);
  border-left: 4px solid #2196f3;
  margin-left: 30px;
}

.message.assistant {
  background: linear-gradient(135deg, #f5f5f5 0%, #eeeeee 100%);
  border-left: 4px solid {{theme.primaryColor}};
  margin-right: 30px;
}

.message-role {
  font-size: 10px;
  font-weight: bold;
  text-transform: uppercase;
  color: #666;
  margin-bottom: 8px;
  letter-spacing: 0.5px;
}

.message-content {
  line-height: 1.6;
  font-size: 12px;
  color: #333;
}

.message-content p {
  margin: 0 0 10px 0;
}

.message-content p:last-child {
  margin-bottom: 0;
}

.message-content code {
  background: rgba(0,0,0,0.1);
  padding: 2px 4px;
  border-radius: 3px;
  font-family: 'Courier New', monospace;
  font-size: 11px;
}

.message-content strong {
  font-weight: 600;
  color: #222;
}

.message-content em {
  font-style: italic;
  color: #555;
}

.message-time {
  font-size: 9px;
  color: #999;
  text-align: right;
  margin-top: 8px;
  font-style: italic;
}

.conversation-stats {
  background: #f8f9fa;
  border-radius: 6px;
  padding: 10px;
  margin: 10px 0;
  font-size: 11px;
}

@media print {
  .message {
    page-break-inside: avoid;
    margin-bottom: 15px;
  }
  
  .message-container {
    page-break-inside: auto;
  }
}
</style>